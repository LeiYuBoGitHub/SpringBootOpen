<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lyb.mapper.BookMapper">

    <insert id="insert" parameterType="com.lyb.entity.Book">
        insert into book
            (name,create_time,update_time)
        values
        (#{name},sysdate(),sysdate())
    </insert>

    <update id="update" parameterType="com.lyb.entity.Book">
        update book set
        <if test="name != null">
            name = #{name}
        </if>
        where 1 = 1
        and id = #{id}
    </update>

</mapper>